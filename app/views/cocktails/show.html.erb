<h1><%= @cocktail.name %></h1>
<%= link_to "Back", cocktails_path %>

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
</div>
<% @cocktail.doses.each do |dose| %>
  <%= dose.ingredient.name %>
  <%= dose.description %>
  <%= link_to "Delete", dose_path(dose), method: :delete, data: {confirm: "Delete"} %>
<% end %>

<%= link_to "Add an ingredient",  new_cocktail_dose_path(@cocktail) %>
